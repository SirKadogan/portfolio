---
import Layout from '../components/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import RetroMenu from '../components/RetroMenu.astro';
import CareerTimeline from '../components/CareerTimeline.astro';
import SocialLinks from '../components/SocialLinks.astro';
import { getCollection } from 'astro:content';
import BlogCard from '../components/BlogCard.astro';

// Get all projects from the content collection
const projects = await getCollection('projects');
// Sort by date (newest first)
const sortedProjects = projects.sort(
  (a: any, b: any) =>
    new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

// Get all career milestones from the content collection
const careerMilestones = await getCollection('career-milestones');
// Sort by year (newest first)
const sortedMilestones = careerMilestones.sort(
  (a: any, b: any) =>
    new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

// Define menu items
const menuItems = [
  { label: 'Experience', targetId: 'experience' },
  { label: 'Projects', targetId: 'projects' },
  { label: 'About Me', targetId: 'about' },
  { label: 'My Links', targetId: 'links' },
  { label: 'Blog', targetId: 'blog' },
];
---

<Layout title="My Retro Portfolio">
  <section class="mb-12">
    <div class="grid md:grid-cols-2 gap-8 items-center">
      <div>
        <p class="text-lg">
          Hi! I'm Thales Kenne, a Senior Software Engineer with 7 years of
          experience in the industry. For the past 4+ years, I've been helping
          US-based clients build their products and scale their teams.
        </p>
      </div>
      <div class="flex justify-center md:justify-end">
        <img
          src="/portfolio/avatar-background.png"
          alt="Thales Kenne - Pixel Art Avatar"
          class="w-72 h-72 object-contain"
        />
      </div>
    </div>
  </section>

  <!-- Retro Navigation Menu -->
  <section class="mb-12">
    <RetroMenu items={menuItems} />
  </section>

  <!-- Experience Section -->
  <section id="experience" class="mt-12">
    <h2 class="text-2xl font-bold mb-6 text-center">Experience</h2>
    <CareerTimeline
      milestones={sortedMilestones.map((milestone) => ({
        year: milestone.data.year,
        title: milestone.data.title,
        company: milestone.data.company,
        description: milestone.data.description,
        type: milestone.data.type,
        date: milestone.data.date,
      }))}
    />
  </section>

  <!-- Projects Section -->
  <section id="projects">
    <h2 class="text-2xl font-bold mb-6 text-center">Projects</h2>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {
        sortedProjects.map((project: any) => (
          <ProjectCard
            title={project.data.title}
            summary={project.data.summary}
            tech={project.data.tech}
            github={project.data.github}
            demo={project.data.demo}
          />
        ))
      }
    </div>
  </section>

  <!-- About Me Section -->
  <section id="about" class="mt-12">
    <h2 class="text-2xl font-bold mb-6 text-center">About Me</h2>
    <div class="max-w-4xl mx-auto text-sm text-center flex flex-col gap-4">
      <p>
        I'm a mechatronics engineer who turned software engineering into a
        passion. Always having worked remotely, I quickly saw potential for
        growth by working with US-based companies.
      </p>
      <p>
        Throughout my career, I always strived to deliver more than just code
        and I'm an aficionado for project management. I believe development and
        project management walk hand in hand and processes are extremely
        important, but they must be tailored to each squad and be light weight.
      </p>
      <p>
        In my personal life, I enjoy the usual nerdy things: reading and gaming.
        I also enjoy working out and spend a whole lot of time in my garden
        taking care of my little plants.
      </p>
    </div>
  </section>

  <!-- My Links Section -->
  <section id="links" class="mt-12">
    <h2 class="text-2xl font-bold mb-6 text-center">My Links</h2>
    <SocialLinks
      links={{
        linkedin: 'https://linkedin.com/in/thaleskenne',
        github: 'https://github.com/sirkadogan',
        stackoverflow: 'https://stackoverflow.com/users/8754782/thales-kenne',
        cv: '/portfolio/thales-kenne-cv.pdf',
      }}
    />
  </section>

  <!-- Blog Section -->
  <section id="blog" class="mt-12">
    <h2 class="text-2xl font-bold mb-6 text-center">Blog</h2>
    <div class="grid gap-6 md:grid-cols-2">
      <BlogCard
        title="Mastering OpenSearch at Scale: A Practical Guide for Enterprise Search Solutions"
        url="https://www.whitespectre.com/ideas/scaling-opensearch-for-enterprise/"
        published="January 7, 2025"
        source="whitespectre.com"
      />
      <BlogCard
        title="Why you should avoid useEffect"
        url="https://sirkadogan.medium.com/why-you-should-avoid-useeffect-55b9c79e985a"
        published="May 2, 2021"
        source="medium.com"
      />
    </div>
  </section>
</Layout>
