---
export interface Props {
  category: string;
  technologies: string[];
  icon?: string;
}

const { category, technologies, icon } = Astro.props;
---

<div class="retro-card p-6 flex flex-col h-full">
  <div class="flex items-center mb-4">
    {
      icon && (
        <span class="text-2xl mr-3 text-yellow-400 dark:text-yellow-300 pixelated">
          {icon}
        </span>
      )
    }
    <h3 class="text-xl font-bold text-green-400 dark:text-green-300">
      {category}
    </h3>
  </div>

  <div class="flex flex-wrap gap-2 flex-1">
    {
      technologies.map((tech: string) => (
        <span class="tech-tag px-3 py-1 bg-blue-900 text-blue-300 text-xs rounded border border-blue-700 dark:bg-blue-800 dark:text-blue-200 dark:border-blue-600 hover:bg-blue-800 hover:border-blue-500 hover:scale-105 transition-all duration-200 cursor-default select-none">
          {tech}
        </span>
      ))
    }
  </div>
</div>
