---
import '../styles/globals.css';
import DarkToggle from '../components/DarkToggle';
const { title = 'Retro Portfolio' } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>TK's Portfolio</title>
    <link
      rel="icon"
      type="image/svg+xml"
      href="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3E%3Crect width='16' height='16' fill='black'/%3E%3Crect x='3' y='2' width='2' height='2' fill='white'/%3E%3Crect x='11' y='2' width='2' height='2' fill='white'/%3E%3Crect x='2' y='4' width='12' height='2' fill='white'/%3E%3Crect x='1' y='6' width='2' height='2' fill='white'/%3E%3Crect x='13' y='6' width='2' height='2' fill='white'/%3E%3Crect x='3' y='6' width='2' height='2' fill='white'/%3E%3Crect x='11' y='6' width='2' height='2' fill='white'/%3E%3Crect x='5' y='8' width='6' height='2' fill='white'/%3E%3Crect x='2' y='10' width='2' height='2' fill='white'/%3E%3Crect x='12' y='10' width='2' height='2' fill='white'/%3E%3Crect x='4' y='12' width='2' height='2' fill='white'/%3E%3Crect x='10' y='12' width='2' height='2' fill='white'/%3E%3C/svg%3E"
    />
  </head>
  <body class="antialiased">
    <div class="max-w-4xl mx-auto p-4">
      <header class="flex justify-between items-center mb-8">
        <div class="logo-container">
          <img
            src="/logo.png"
            alt="SirKadogan 8-bit logo"
            class="h-28 w-auto"
          />
        </div>
        <div class="inline-block">
          <astro-island>
            <DarkToggle client:load />
          </astro-island>
        </div>
      </header>
      <main><slot /></main>
      <footer
        class="mt-12 flex flex-col items-center text-xs text-gray-400 font-mono tracking-widest select-none"
      >
        <span>Thales Kenne</span>
        <span class="flex items-center gap-1 mt-1">
          <span
            class="inline-block align-middle"
            style="font-family: 'Press Start 2P', monospace; font-size: 1em;"
            >Â©</span
          >
          <span>1994-2025</span>
        </span>
      </footer>
    </div>
  </body>
</html>
