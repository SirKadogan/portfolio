---
const technologies = [
  'TypeScript',
  'React Native',
  'React.js',
  'Node.js',
  'Express.js',
  'AWS',
  'GraphQL',
  'Serverless',
  'SQL',
];
---

<div class="tech-hierarchy">
  <div class="tech-grid">
    {
      technologies.map((tech) => (
        <div class="tech-item">
          <span class="tech-tag">{tech}</span>
        </div>
      ))
    }
  </div>
</div>

<style>
  .tech-hierarchy {
    font-family: 'Press Start 2P', monospace;
    background: rgba(13, 27, 42, 0.3);
    border: 2px solid var(--primary);
    padding: 2rem;
    border-radius: 0;
    box-shadow:
      inset -2px -2px 0 var(--muted),
      2px 2px 0 var(--accent);
  }

  .tech-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .tech-item {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .tech-tag {
    position: relative;
    overflow: hidden;
    border-radius: 0;
    font-size: 0.7rem;
    padding: 0.75rem 1.5rem;
    background: var(--bg);
    border: 2px solid var(--primary);
    color: var(--primary);
    text-align: center;
    min-width: 120px;
    transition: all 0.2s ease;
    box-shadow:
      inset -1px -1px 0 var(--muted),
      1px 1px 0 var(--accent);
  }

  .tech-tag::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(224, 169, 109, 0.2),
      transparent
    );
    transition: left 0.3s ease;
  }

  .tech-tag:hover::before {
    left: 100%;
  }

  .tech-tag:hover {
    transform: translateY(-2px);
    box-shadow:
      inset -2px -2px 0 var(--muted),
      3px 3px 0 var(--accent);
    background: rgba(224, 169, 109, 0.1);
  }

  @media (max-width: 768px) {
    .tech-grid {
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 0.75rem;
    }

    .tech-tag {
      font-size: 0.6rem;
      padding: 0.5rem 1rem;
      min-width: 100px;
    }
  }
</style>
