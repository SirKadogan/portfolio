---
export interface Props {
  title: string;
  summary: string;
  tech?: string[];
  github?: string;
  demo?: string;
}

const { title, summary, tech, github, demo } = Astro.props;
---

<div class="retro-card p-6 flex">
  <div class="flex flex-col flex-1">
    <h3 class="text-xl font-bold mb-2 text-green-400 dark:text-green-300">
      {title}
    </h3>
    <p class="text-gray-300 mb-4 text-sm dark:text-gray-200">{summary}</p>

    {
      tech && (
        <div class="mb-4">
          <div class="flex flex-wrap gap-2">
            {tech.map((techItem: string) => (
              <span class="px-2 py-1 bg-blue-900 text-blue-300 text-xs rounded border border-blue-700 dark:bg-blue-800 dark:text-blue-200 dark:border-blue-600">
                {techItem}
              </span>
            ))}
          </div>
        </div>
      )
    }
  </div>

  <div class="flex gap-2">
    {
      github && (
        <a
          href={github}
          target="_blank"
          rel="noopener noreferrer"
          class="px-3 py-1 bg-gray-700 text-gray-300 text-sm rounded border border-gray-600 hover:bg-gray-600 transition-colors dark:bg-gray-600 dark:text-gray-200 dark:border-gray-500 dark:hover:bg-gray-500"
        >
          GitHub
        </a>
      )
    }
    {
      demo && (
        <a
          href={demo}
          target="_blank"
          rel="noopener noreferrer"
          class="px-3 py-1 bg-green-700 text-green-300 text-sm rounded border border-green-600 hover:bg-green-600 transition-colors dark:bg-green-600 dark:text-green-200 dark:border-green-500 dark:hover:bg-green-500"
        >
          Live Demo
        </a>
      )
    }
  </div>
</div>
