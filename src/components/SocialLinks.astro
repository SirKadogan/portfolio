---
export interface Props {
  links: {
    linkedin: string;
    github: string;
    stackoverflow: string;
    cv: string;
  };
}

const { links } = Astro.props;
---

<div class="social-links">
  <div class="links-grid">
    <!-- LinkedIn Link -->
    <a
      href={links.linkedin}
      target="_blank"
      rel="noopener noreferrer"
      class="retro-card linkedin-link"
    >
      <div class="link-icon">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
          <path
            d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
          ></path>
        </svg>
      </div>
      <div class="link-content">
        <span class="link-label">LinkedIn</span>
        <span class="link-desc">Connect with me</span>
      </div>
    </a>

    <!-- GitHub Link -->
    <a
      href={links.github}
      target="_blank"
      rel="noopener noreferrer"
      class="retro-card github-link"
    >
      <div class="link-icon">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
          <path
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path>
        </svg>
      </div>
      <div class="link-content">
        <span class="link-label">GitHub</span>
        <span class="link-desc">View my code</span>
      </div>
    </a>

    <!-- Stack Overflow Link -->
    <a
      href={links.stackoverflow}
      target="_blank"
      rel="noopener noreferrer"
      class="retro-card stackoverflow-link"
    >
      <div class="link-icon">
        <svg width="24" height="24" viewBox="0 0 16 16" fill="currentColor">
          <path
            d="M16 10v6H0v-6h2v4h12v-4zM3 11h10v2H3zm.237-2.165l.433-1.953l9.763 2.164L13 10.999zM4.37 4.821l.845-1.813l9.063 4.226l-.845 1.813zm11.126.827l-1.218 1.587l-7.934-6.088L7.224 0h.91z"
          ></path>
        </svg>
      </div>
      <div class="link-content">
        <span class="link-label">Stack Overflow</span>
        <span class="link-desc">See my answers</span>
      </div>
    </a>

    <!-- CV Download -->
    <a href={links.cv} download class="retro-card cv-link">
      <div class="link-icon">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
          <path
            d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"
          ></path>
        </svg>
      </div>
      <div class="link-content">
        <span class="link-label">Download CV</span>
        <span class="link-desc">Get my resume</span>
      </div>
    </a>
  </div>
</div>

<style>
  .social-links {
    max-width: 600px;
    margin: 0 auto;
  }

  .links-grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  .link-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--primary);
    border: 2px solid var(--bg);
    box-shadow:
      inset -2px -2px 0 var(--muted),
      2px 2px 0 var(--accent);
    color: var(--bg);
    flex-shrink: 0;
  }

  .linkedin-link .link-icon {
    background: #0077b5;
  }

  .github-link .link-icon {
    background: #333;
  }

  .stackoverflow-link .link-icon {
    background: #f48024;
  }

  .cv-link .link-icon {
    background: var(--accent);
  }

  .link-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .link-label {
    font-size: 1rem;
    font-weight: bold;
    color: var(--primary);
  }

  .link-desc {
    font-size: 0.8rem;
    color: var(--muted);
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .links-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .retro-card {
      padding: 1rem;
    }

    .link-icon {
      width: 40px;
      height: 40px;
    }

    .link-label {
      font-size: 0.9rem;
    }

    .link-desc {
      font-size: 0.75rem;
    }
  }
</style>
