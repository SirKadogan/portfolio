---
interface Props {
  title: string;
  url: string;
  published: string;
  source: string;
}
const { title, url, published, source } = Astro.props;
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class="retro-card block transition-all"
>
  <div class="flex flex-col gap-2">
    <span class="text-xs text-gray-400">Published: {published}</span>
    <span class="font-bold text-lg text-primary">{title}</span>
    <span class="text-xs text-gray-500">{source}</span>
  </div>
</a>
